import random

kingdoms = ["Bielefeld", "Yuden", "Deheon", "Callistia", "União Purpura", "Ahlen", "Doherimm", "Khubar", "Wynnla", "Fortuna", "Pondsmânia", "Sckharshantallas ", "Collen", "Lamnor", "Zakharov", "Namalkah", "Hongari e Portsmouth", "Sallistick", "Lomatubar e Tollon", "Sambúrdia e Ghondriann", "Tyrondir", "Tapista", "Petrynia"]

def roll_dice():
    roll = random.randint(1, 20)
    return roll

for kingdom in kingdoms:
    print(f"Rolando o destino de {kingdom}:")
    result = roll_dice()

    if result == 1:
        print(f"Resultado {result}: Catástrofes - Guerra, fome e desastres naturais devastam o reino. O povo sofre muito.")
    elif result <= 3:
        print(f"Resultado {result}: Turbulência política - O reino é assolado por rebelião e agitação. Os governantes lutam para manter a ordem.")
    elif result == 4:
        print(f"Resultado {result}: Terror mágico – Uma maldição ou magia caótica é liberada sobre o reino, causando grande dano e terror.")
    elif result == 5:
        print(f"Resultado {result}: Praga - Uma doença mortal varre o reino, matando muitos e causando pânico generalizado.")
    elif result == 6:
            print(f"Resultado {result}: O reino é cercado por intrigas e conspirações, sem ninguém capaz de manter a ordem ou restaurar a paz. Ex: Invasão - Um reino vizinho invade, buscando expandir seu território e controle.")
    elif result <= 8:
            print(f"Resultado {result}: Criaturas míticas - O reino é visitado por criaturas mágicas, como dragões, unicórnios e grifos, trazendo admiração e espanto ao seu povo.")
    elif result <= 11:
            print(f"Resultado {result}: Nada muito fora do habitual.")
    elif result == 12:
            print(f"Resultado {result}: Tesouro natural – Uma jazida de algum mineral ou utilitários é descoberta, dando ao reino um pouco riqueza.")
    elif result == 13:
            print(f"Resultado {result}: Descoberta - Uma grande descoberta é feita, revelando novos segredos e conhecimentos que beneficiam muito o reino.")
    elif result == 14:
            print(f"Resultado {result}: Renascimento religioso - O reino experimenta um grande renascimento religioso, com novas fés e crenças surgindo e se espalhando pela população.")
    elif result <= 16:
            print(f"Resultado {result}: Boom comercial - O reino se torna um centro de comércio e comércio, trazendo grande prosperidade e riqueza para seu povo")
    elif result <= 18:
            print(f"Resultado {result}: Heróis – A guilda cresce junto ao reino, grandes aventureiros aparecem para defender os reinos do mal, executar missões importantes e adquirir conquistas.")
    elif result == 19:
            print(f"Resultado {result}: Avanço no conhecimento - O reino experimenta um grande salto em tecnologia ou magia, com novas invenções e inovações que melhoram muito a vida das pessoas")
    else:
            print(f"Resultado {result}: Muita fortuna - O reino vive um grande golpe de sorte, com tudo dando certo e seu povo prosperando muito.")


    print()
